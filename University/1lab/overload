#include <stdio.h>

double func(int* arr, int length);
double func(double* arr, int length);

int main(void)
{
	double arr1[] = { -2,4,6,8,9,5,3};
	double arr2[] = { 2.3,4.1,4.6};
	printf("Function with int is:%0.1f\n",func(arr1,7));
	printf("Function with double is:%0.1f\n", func(arr2, 3));
	return 0;
}
double func(int* arr, int length)
{
	int sum = 0;
	double result = 0;
	if (length > 0)
	{
		for (int i = 0; i < length; i++)
			sum += arr[i];
		result = sum / length;
	}
	return result;
	if(length <= 0)
	return 0;
}


double func(double* arr, int length)
{
	double sum = 0;
	double result = 0;
	if (length > 0)
	{
		for (int i = 0; i < length; i++)
			sum += arr[i];
		result = sum / length;
	}
	return result;
	if (length <= 0)
		return 0;
}
